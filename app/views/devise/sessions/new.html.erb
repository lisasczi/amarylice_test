<div class="container">
  <h1 class= "main_title">Connectez vous !</h1>

<div class="form-session-contact">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%# <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, placeholder:"votre email", autocomplete: "email" %>
    </div>
<br>
<br>
    <div class="field">
      <%# <%= f.label :password %>
      <%= f.password_field :password, placeholder:"votre mot de passe", autocomplete: "current-password" %>
    </div>
<br>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"form-submit-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
