<h1>coucou edit</h1>

<div class="container">
    <br/>
    <h1>Modifier l'article </h1>
    <br/>
    <br/>
    <%= form_for @flower do |f| %>
        <div class="form-group">
        <label class="form-label">Nom de l'article</label>
        <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
        <label class="form-label">Description de l'article</label>
        <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
        <label class="form-label">Prix de l'article</label>
        <%= f.number_field :price, step: 0.01, class: 'form-control' %>
         <% if user_signed_in? %>
                      <%= form_for @join_table_flower_cart do |f| %>
                          <%= f.hidden_field :flower_id, value: flower.id %>
                          <%= f.hidden_field :cart_id, value: current_user.cart.id %>
                          <button type="submit" class="btn btn-success">Ajouter au panier</button>
                        <% end %>
        </div>
        <% end %>

        <div class="form-group">
        <button type="submit" class="btn btn-success">Modifier l'article</button>
        </div>
        <br/>
        <a href="<%= flowers_path %>" class="btn btn-secondary">Retourner Ã  l'accueil</a>
        <a href="<%= flower_path(@flower.id) %>" class="btn btn-secondary">Retourner sur l'article</a>

    <% end %>
</div>
